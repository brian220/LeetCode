class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        int i = 0;
        int currentLength = 0;
        int maxLength = 0;
        unordered_map <char, int> hashTable;
        for (int j = 0; j < s.size(); j ++) {
            hashTable[s[j]] ++;
            // Repeat number
            while(hashTable[s[j]] > 1) {
                hashTable[s[i]] --;
                i ++;
            }
            
            // Update max length
            currentLength = j - i + 1;
            if (currentLength > maxLength) {
                maxLength = currentLength;
            }
        }
        return maxLength;
    }
};
